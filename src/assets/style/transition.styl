.fade-enter-active, .fade-leave-active
  transition opacity 0.3s
.fade-enter-from, .fade-leave-to
  opacity 0
.fade-enter-to, .fade-leave-from
  opacity 1

.fade-delay-enter-active
  transition opacity 0.3s
  transition-delay: 0.3s
.fade-delay-leave-active
  transition opacity 0.3s
.fade-delay-enter-from, .fade-delay-leave-to
  opacity 0
.fade-delay-enter-to, .fade-delay-leave-from
  opacity 1

.slider-up-enter-active, .slider-up-leave-active
  transition all 0.5s
.slider-up-enter-from, .slider-up-leave-to
  transform translateY(100%)
.slider-up-enter-to, .slider-up-leave-from
  transform translateY(0)

.slider-down-enter-active, .slider-down-leave-active
  transition all 0.5s
.slider-down-enter-from, .slider-down-leave-to
  transform translateY(-100%)
.slider-down-enter-to, .slider-down-leave-from
  transform translateY(0)

.slider-left-enter-active, .slider-left-leave-active
  transition all 0.5s
.slider-left-enter-from, .slider-left-leave-to
  transform translateX(100%)
  opacity 0
.slider-left-enter-to, .slider-left-leave-from
  transform translateX(0)
  opacity 1

.slider-enter-active
  transition all 0.3s ease-out
  transition-delay: 0.3s
.slider-leave-active
  transition all 0.3s ease-out
.slider-enter-from, .slider-leave-to
  max-height 0
  opacity 0
.slider-enter-to, .slider-leave-from
  max-height 200px
  opacity 1

.slider2-enter-active, .slider2-leave-active
  transition all 0.3s ease-out
.slider2-enter-from, .slider2-leave-to
  max-width 0
  opacity 0
.slider2-enter-to, .slider2-leave-from
  max-width 200px
  opacity 1

@keyframes logo
  0%
    transform scale(1, 1)
  40%
    transform scale(1.2, 1.2)
  100%
    transform scale(1, 1)

@keyframes logo-restart
  0%
    transform scale(1, 1)
  40%
    transform scale(1.2, 1.2)
  100%
    transform scale(1, 1)

@keyframes voice
  0%
    opacity 0
  100%
    opacity 1

@keyframes voice-restart
  0%
    opacity 0
  100%
    opacity 1